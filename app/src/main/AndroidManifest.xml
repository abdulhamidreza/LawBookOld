<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lb.lawbook">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LawBook">
        <activity android:name=".profile.services.ServiceDetailsActivity" />
        <activity android:name=".profile.services.ServiceActivity" />
        <activity android:name=".profile.ProfileAddressActivity" />
        <activity android:name=".profile.ProfileProfessionalActivity" />
        <activity android:name=".profile.ProfileBasicInfoActivity" />
        <activity android:name=".profile.ProfileActivity" />
        <activity android:name=".HomeActivity" />
        <activity
            android:name=".data.NavigationActivity"
            android:label="@string/title_activity_navigation"
            android:theme="@style/Theme.LawBook.NoActionBar" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>