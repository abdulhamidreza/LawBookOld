<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lb.lawbook.LoginActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="Personal details" />

            <EditText
                android:id="@+id/fname_txt"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="First Name" />

            <EditText
                android:id="@+id/mname_txt"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="Middle Name" />

            <EditText
                android:id="@+id/sname_txt"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="Second Name" />

            <EditText
                android:id="@+id/age_txt"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="Age" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="Profesonal details" />

            <EditText
                android:id="@+id/y_of_exp_txt"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="Year Of Exp" />

            <EditText
                android:id="@+id/field_txt"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="Field of Practice" />

            <EditText
                android:id="@+id/no_of_cases_txt"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="No Of cases" />

            <EditText
                android:id="@+id/digree_txt"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="Digree" />

            <EditText
                android:id="@+id/bar_txt"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="Bar Name" />

            <EditText
                android:id="@+id/registration_no_txt"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="Bar reg No" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="Home Address" />

            <EditText
                android:id="@+id/house_no_txt_home"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="House No" />

            <EditText
                android:id="@+id/street_txt_home"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="Street Name" />

            <EditText
                android:id="@+id/city_txt_home"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="City" />

            <EditText
                android:id="@+id/pin_txt_home"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="Pin" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="Office Address 1" />

            <EditText
                android:id="@+id/house_no_txt_off1"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="House No" />

            <EditText
                android:id="@+id/street_txt_off1"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="Street Name" />

            <EditText
                android:id="@+id/city_txt_off1"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="City" />

            <EditText
                android:id="@+id/pin_txt_off1"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="Pin" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="Office Address 2" />

            <EditText
                android:id="@+id/house_no_txt_off2"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="House No" />

            <EditText
                android:id="@+id/street_txt_off2"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="Street Name" />

            <EditText
                android:id="@+id/city_txt_off2"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="City" />

            <EditText
                android:id="@+id/pin_txt_off2"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="Pin" />
        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/textViewRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.257"
        tools:text="Hello World!" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="308dp"
        android:onClick="insetToFB"
        android:textColor="@color/primaryLightColor"
        android:text="Insert"
        app:layout_constraintStart_toStartOf="@+id/buttonSignOut"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:onClick="readFromFB"
        android:textColor="@color/primaryTextColor"
        android:text="Read"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.475" />

    <Button
        android:id="@+id/buttonSignOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="484dp"
        android:layout_marginEnd="4dp"
        android:text="LogOut"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewUserDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="712dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:text="Pay"
        android:onClick="payNow"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintBottom_toTopOf="@+id/buttonSignOut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

</androidx.constraintlayout.widget.ConstraintLayout>